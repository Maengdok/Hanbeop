            <tr>
                <th>Titre</th>
                <td>{{ grammar.title }}</td>
            </tr>
            <tr>
                <th>Lettre</th>
                <td>{{ grammar.letter.symbol }}</td>
            </tr>
            <tr>
                <th>Catégorie</th>
                <td>{{ grammar.category.name }}</td>
            </tr>
            <tr>
                <th>Niveau</th>
                <td>{{ grammar.level.name }}</td>
            </tr>
        </tbody>
    </table>


