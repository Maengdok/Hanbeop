{% extends 'adminBase.html.twig' %}

{% block title %}Grammar index{% endblock %}

{% block body %}
<div class="row d-flex">
    <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb" class="d-flex justify-content-end">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('admin') }}">Admin</a></li>
            <li class="breadcrumb-item active" aria-current="page">Grammaires</li>
        </ol>
    </nav>
</div>
    <h1>Grammaires</h1>
    <a href="{{ path('admin_grammar_new') }}"><button class="btn btn-outline-success px-4"><i class="fas fa-plus"></i></button></a>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Titre</th>
                <th>Lettre</th>
                <th>Cat√©gorie</th>
                <th>Niveau</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for grammar in grammars %}
            <tr>
                <td>{{ grammar.id }}</td>
                <td>{{ grammar.title }}</td>
                <td>{{ grammar.letter.symbol }}</td>
                <td>{{ grammar.category.name }}</td>
                <td>{{ grammar.level.name }}</td>
                <td class="d-flex d-inline">
                    <a href="{{ path('admin_grammar_show', {'id': grammar.id}) }}"><button class="btn btn-outline-primary px-4 mx-2"><i class="far fa-eye"></i></button></a>
                    <a href="{{ path('admin_grammar_edit', {'id': grammar.id}) }}"><button class="btn btn-outline-warning px-4 mx-2"><i class="far fa-edit"></i></button></a>
                    {% include "Admin/admin_grammar/_delete_form.html.twig" %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_grammar_new') }}"><button class="btn btn-outline-success px-4"><i class="fas fa-plus"></i></button></a>
{% endblock %}
