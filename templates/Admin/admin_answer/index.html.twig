{% extends 'adminBase.html.twig' %}

{% block title %}Answer index{% endblock %}

{% block body %}
<div class="row d-flex">
    <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb" class="d-flex justify-content-end">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('admin') }}">Admin</a></li>
            <li class="breadcrumb-item active" aria-current="page">Réponses</li>
        </ol>
    </nav>
</div>
    <h1>Liste des réponses</h1>

    <a href="{{ path('admin_answer_new') }}"><button class="btn btn-outline-success"><i class="fas fa-plus px-2"></i></button></a>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Grammaire</th>
                <th>Exercice</th>
                <th>Question</th>
                <th>Contenu</th>
                <th>Est-ce correct ?</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for answer in answers %}
            <tr>
                <td>{{ answer.id }}</td>
                <td>{{ answer.question.exercice.grammar.title }}</td>
                <td>{{ answer.question.exercice.title }}</td>
                <td>{{ answer.question.content }}</td>
                <td>{{ answer.content }}</td>
                <td>{{ answer.isCorrect ? 'Oui' : 'Non' }}</td>
                <td class="d-flex d-inline">
                    <a href="{{ path('admin_answer_show', {'id': answer.id}) }}"><button class="btn btn-outline-primary px-4 mx-2"><i class="far fa-eye"></i></button></a>
                    <a href="{{ path('admin_answer_edit', {'id': answer.id}) }}"><button class="btn btn-outline-warning px-4 mx-2"><i class="far fa-edit"></i></button></a>
                    {{ include('Admin/admin_answer/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun résultat trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_answer_new') }}"><button class="btn btn-outline-success"><i class="fas fa-plus px-2"></i></button></a>
{% endblock %}
