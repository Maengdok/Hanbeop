{% extends 'base.html.twig' %}

{% block title %}Exercice index{% endblock %}

{% block body %}
    <h1>Exercice index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>CreatedAt</th>
                <th>IsPremium</th>
                <th>Difficulty</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for exercice in exercices %}
            <tr>
                <td>{{ exercice.id }}</td>
                <td>{{ exercice.title }}</td>
                <td>{{ exercice.createdAt ? exercice.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ exercice.isPremium ? 'Yes' : 'No' }}</td>
                <td>{{ exercice.difficulty }}</td>
                <td>
                    <a href="{{ path('admin_exercice_show', {'id': exercice.id}) }}">show</a>
                    <a href="{{ path('admin_exercice_edit', {'id': exercice.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_exercice_new') }}">Create new</a>
{% endblock %}
