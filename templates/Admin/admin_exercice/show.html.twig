{% extends 'base.html.twig' %}

{% block title %}Exercice{% endblock %}

{% block body %}
    <h1>Exercice</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ exercice.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ exercice.title }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ exercice.createdAt ? exercice.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>IsPremium</th>
                <td>{{ exercice.isPremium ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Difficulty</th>
                <td>{{ exercice.difficulty }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_exercice_index') }}">back to list</a>

    <a href="{{ path('admin_exercice_edit', {'id': exercice.id}) }}">edit</a>

    {{ include('Admin/admin_exercice/_delete_form.html.twig') }}
