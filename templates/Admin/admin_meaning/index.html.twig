{% extends 'base.html.twig' %}

{% block title %}Meaning index{% endblock %}

{% block body %}
    <h1>Meaning index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Content</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for meaning in meanings %}
            <tr>
                <td>{{ meaning.id }}</td>
                <td>{{ meaning.content }}</td>
                <td>
                    <a href="{{ path('admin_meaning_show', {'id': meaning.id}) }}">show</a>
                    <a href="{{ path('admin_meaning_edit', {'id': meaning.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_meaning_new') }}">Create new</a>
{% endblock %}
