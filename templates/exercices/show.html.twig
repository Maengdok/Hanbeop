{% extends "base.html.twig" %}

{% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/Exercices/style.css') }}">
{% endblock %}

{% block body %}

    <div class="link-path">
        <span><a href="{{ path('index')}}"><i class="fas fa-home"></i> Home</a> > <a href="{{ path('exercices') }}">Exercices</a> > {{ exercice.title }}</span>
    </div>
    <div class="exercice-page">
        {% if not is_granted("ROLE_PREMIUM") and not is_granted('IS_AUTHENTICATED_ANONYMOUSLY') %}
            <div class="side-menus">
                {% include "includes/exercices/_premiumMenu.html.twig" %}
            </div>
        {% endif %}
        <div class="exercice-section">
            <div class="title-path">
                <div class="head-title">
                    <h1>{{ exercice.title }}</h1>
                        <p><span>{{ exercice.difficulty }}</span> <span>{{ exercice.isPremium }}</p>
                </div>
            </div>
            <span class="separator"></span>
            <form class="exercice">
                {% for question in questions %}
                    <div class="question-answers"> 
                        <div class="quizz">
                            <div class="quizz-question">
                                {% if question.exercice.grammar.id == exercice.grammar.id and question.exercice.id == exercice.id %}
                                    <h4>Question : {{ question.content }} {{ question.exercice.title }} {{ exercice.grammar.title }}</h4>
                                {% endif %}
                            </div>
                            <div class="quizz-answers">
                                {% set i = 1 %}
                                {% for answer in answers %}
                                    {# Si les réponses enregistrées font partie des réponses de l'exercice actuel #}
                                    {% if answer.question.exercice.id == question.exercice.id and question.exercice.id == exercice.id %}
                                        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                                <div class="answer">
                                                    <label for="answer_{{ i }}" class="answer-label">
                                                        <a href="{{ path('add_userAnswer', {id: exercice.id, question_id: question.id, answer_id: answer.id}) }}">
                                                            <button type="button" class="answer-button" id="answer_{{ i }}"></button>
                                                            <div class="answer-text">{{ answer.content }}</div>
                                                        </a>
                                                    </label>
                                                </div>
                                        {% else %}
                                            <div class="answer">
                                                <label for="answer_{{ i }}" class="answer-label">
                                                    <a href="{{ path('app_login') }}">
                                                        <button type="button" class="answer-button" id="answer_{{ i }}"></button>
                                                        <div class="answer-text">{{ answer.content }}</div>
                                                    </a>
                                                </label>
                                            </div>
                                            {% set i = i + 1 %}
                                        {% endif %}
                                    {% endif %}
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                {% endfor %}
                <div class="user-answers">
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <strong>Réponse(s) choisie(s):</strong>
                        {% for question in questions %}
                            {% set i = 0 %}
                            {% set nbI = 0 %}
                            {% for answer in answers %}
                                {% if answer.question.exercice.id == question.exercice.id and question.exercice.id == exercice.id %}
                                    {% for userAnswer in userAnswers %}
                                        {% if userAnswer.answer.content == answer.content and userAnswer.user == app.user and nbI <= i %}
                                            <div class="user-answer-text">{{ answer.content }} </div>
                                            {% set nbI = nbI + 1 %}
                                        {% endif %}
                                    {% endfor %}
                                {% endif %}
                                {% set i = i + 1 %}
                            {% endfor %}
                        {% endfor %}
                    {% endif %}
                </div>
            </form>
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <div class="valid-btn">
                    <a href="{{ path('show_answer', {id: exercice.id}) }}">
                        <button type="button">Valider</button>
                    </a>
                </div>
            {% else %}
                <div class="valid-btn">
                    <a href="{{ path('app_login') }}">
                        <button type="button">Se connecter</button>
                    </a>
                </div>
            {% endif %}
        </div>
    </div>

{% endblock %}