{% extends "base.html.twig" %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/Payment/style.css') }}">
{% endblock %}

{% block body %}
    <div class="subscription-block">
        <div class="subscription-title">
            <h1>Hanbeop Premium</h1>
        </div>
        <div class="subscription-body">
            <div class="subscription-time">
                <h4>Durée</h4>
                <p>1 mois</p>
            </div>
            <div class="subscription-offer">
                <h4>Avantages</h4>
                <ul>
                    <li>Accès à tous les exercices Premium</li>
                <ul>
            </div>
            <div class="valid-btn">
                <a href="{{ path('payment') }}">
                    <label for="valid-btn">
                        <input type="button" class="valid-btn" value="S'abonner">
                    </label>
                </a>
            </div>
        </div>
    </div>
{% endblock %}